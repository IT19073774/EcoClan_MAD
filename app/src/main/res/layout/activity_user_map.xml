<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map"
    tools:context=".UserMap">






    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="279dp"
        android:layout_marginBottom="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


    </fragment>


    <EditText
        android:id="@+id/resource_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="88dp"
        android:layout_weight="0.5"
        android:background="@drawable/custom_edit_text"
        android:hint="Resource - ex(old books)"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/resource_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="90dp"
        android:layout_weight="0.5"
        android:background="@drawable/custom_edit_text"
        android:hint="Estimate Weight"
        android:inputType="number"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/material_name"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="92dp"
        android:layout_weight="0.5"
        android:background="@drawable/custom_edit_text"
        android:hint="Material - ex(Paper)"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="671dp"
        android:text="@string/Lable_title_map_"
        android:textColor="@color/U_White"
        android:textSize="18sp" />


    <Button
        android:id="@+id/setbtn"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="641dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/custom_btn_green"
        android:text="Set Location"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/backbtn1"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="641dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/custom_btn_white"
        android:text="Back to home"
        android:textColor="#000000"
        android:visibility="invisible"
        />






</RelativeLayout>
