<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".InvoiceActivity">


    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/design2"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="398dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="633dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/design4"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:text="I N V O I C E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cusemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="50dp"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cuscontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="51dp"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="159dp"
        android:text="Customer :"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="EcoCLan Material Rate (Per 1Kg):"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="232dp"
        android:text="Resource Material Type:"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/resweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rescolrate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/rescolrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resmaterial"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="51dp"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/resmaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="50dp"
        android:textSize="17sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="171dp"
        android:text="Invoice Total :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resweight"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="51dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="69dp"
        android:text="Measured Weight (Kg):"
        android:textSize="17sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="144dp"
        android:layout_height="137dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="491dp"
        app:srcCompat="@drawable/logo_v3" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="539dp"
        android:layout_marginEnd="50dp"
        android:text="E C O C L A N"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button5"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:onClick="cancel"
        android:layout_marginTop="95dp"
        android:text="Cancel"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:background="@drawable/design1"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="50dp"
        android:text="Pay"
        android:background="@color/colorAccent"
        android:onClick="payNow"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20sp" />



    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation='horizontal'
        android:layout_marginTop="680dp">

        <RadioButton
            android:id="@+id/Credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Credit Card" />

        <RadioButton
            android:id="@+id/Cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:text="Cash in hand" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:textSize="18sp"
        android:layout_marginTop="650dp"
        android:text="Choose Payment Method :" />

</RelativeLayout>