<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    card_view:cardCornerRadius = "4dp"
    android:layout_marginLeft = "20dp"
    card_view:cardElevation="10dp"
    android:layout_marginRight = "20dp"
    android:layout_marginBottom = "10dp"
    android:layout_height = "160dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="RequestID"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="151dp"
            android:fontFamily="sans-serif"
            android:text="Time"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/contact"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="154dp"
            android:fontFamily="sans-serif"
            android:text="Date"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/address"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/address"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:text="Category"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="sans-serif"
            android:text="Rs. 0.00"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/contact" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif"
            android:text="Weight"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="20sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/address" />

        <TextView
            android:id="@+id/id"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:fontFamily="sans-serif"
            android:text="Collector"
            android:textAlignment="center"
            android:textColor="#058F0A"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/company"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button9"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/roundedcorner"
            android:onClick="pickDate"
            android:text="Receive"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/address3"
            card_view:layout_constraintTop_toBottomOf="@+id/id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>